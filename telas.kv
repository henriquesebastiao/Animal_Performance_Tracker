#:kivy 2.1.0

ScreenManager:
    SplashScreen:
    DashboardScreen:

# Tela de Splash
<SplashScreen>:
    name: 'splash_screen'
    MDFloatLayout:
        md_bg_color: 8/255, 137/255, 90/255, 1
        Image:
            source: 'images/logo.png'
            size_hint: .50, .50
            size: 300, 300
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            canvas.before:
                Color:
                    rgba: 8/255, 137/255, 90/255, 1
        
        # Botão de avançar
        MDIconButton:
            icon: 'chevron-right'
            user_font_size: '35sp'
            pos_hint: {'center_x': .5, 'center_y': .12}
            on_press: app.root.current = 'dashboard_screen'
            
        MDLabel:
            text: 'Animal Performance'
            pos_hint: {'center_x': .5, 'center_y': 0.30}
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: 0, 0, 0
            font_size: '20sp'
            font_name: 'fonts/Roboto-Medium.ttf'

        MDLabel:
            text: 'Tracker'
            pos_hint: {'center_x': .5, 'center_y': 0.265}
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: 0, 0, 0
            font_size: '20sp'
            font_name: 'fonts/Roboto-Medium.ttf'

# Tela de Dashboard 
<DashboardScreen>:
    name: 'dashboard_screen'
    MDFloatLayout:

        # Barra de navegação inferior
        MDBottomNavigation:
            painel_color: 8/255, 137/255, 90/255, 1
            selected_color_background: "#1a1c17" # Cor de fundo do item selecionado
            text_color_active: "lightgrey"
            use_text: False # NÃO MOSTRAR TEXTO

            # Add a NavigationItem for each Navigation.
            MDBottomNavigationItem:
                name: "animais"
                text: "Animais"
                icon: "cow"
                font_name: 'fonts/Roboto-Regular.ttf'
                # badge_icon: "numeric-10" # NÚMERO DE NOTIFICAÇÕES
        
            MDBottomNavigationItem:
                name: "propriedades"
                text: "Propriedades"
                icon: "barn"
                font_name: 'fonts/Roboto-Regular.ttf'
            
            MDBottomNavigationItem:
                name: "estatisticas"
                text: "Estatísticas"
                icon: "chart-box"
                font_name: 'fonts/Roboto-Regular.ttf'
            
            MDBottomNavigationItem:
                name: "Mais"
                text: "Mais"
                icon: "menu"
                font_name: 'fonts/Roboto-Regular.ttf'
        
        MDFloatingActionButtonSpeedDial:
            data: app.data
            root_button_anim: True