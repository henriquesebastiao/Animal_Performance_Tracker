#:kivy 2.1.0

ScreenManager:
    SplashScreen:
    MainScreen:
    RegisterScreen:

# Tela de Splash
<SplashScreen>:
    name: 'splash_screen'
    MDFloatLayout:
        md_bg_color: 8/255, 137/255, 90/255, 1
        Image:
            source: 'images/logo.png'
            size_hint: .50, .50
            size: 300, 300
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            canvas.before:
                Color:
                    rgba: 8/255, 137/255, 90/255, 1
        
        # Botão de avançar
        MDIconButton:
            icon: 'chevron-right'
            user_font_size: '35sp'
            pos_hint: {'center_x': .5, 'center_y': .12}
            on_press: app.root.current = 'nav_bar'
            
        MDLabel:
            text: 'Animal Performance'
            pos_hint: {'center_x': .5, 'center_y': 0.30}
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: 0, 0, 0
            font_size: '20sp'
            font_name: 'fonts/Roboto-Medium.ttf'

        MDLabel:
            text: 'Tracker'
            pos_hint: {'center_x': .5, 'center_y': 0.265}
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: 0, 0, 0
            font_size: '20sp'
            font_name: 'fonts/Roboto-Medium.ttf'

<MainScreen>: # Tela principal
    name: 'nav_bar'
    MDFloatLayout:
        MDBottomNavigation: # Barra de navegação inferior
            painel_color: 8/255, 137/255, 90/255, 1 # Cor do painel
            selected_color_background: "#3c4b38" # Cor de fundo do item selecionado
            text_color_active: "#daecd2" # Cor do ícone de navegação selecionado
            text_color_normal: "#bdc3b9" # Cor dos ícones de navegação
            use_text: True # NÃO MOSTRAR TEXTO
            font_name: 'fonts/Product-Sans-Regular.ttf'
            
            MDBottomNavigationItem:
                name: "animais"
                text: "Animais"
                icon: "cow"
                # on_tab_press: app.root.current = 'dashboard_screen'
                # badge_icon: "numeric-10" # NÚMERO DE NOTIFICAÇÕES
                MDLabel:
                    text: "Animais"
            MDBottomNavigationItem:
                name: "propriedades"
                text: "Propriedades"
                icon: "barn"
                # on_tab_press: app.root.current = 'properties_screen'
            
            MDBottomNavigationItem:
                name: "estatisticas"
                text: "Estatísticas"
                icon: "chart-box"
            
            MDBottomNavigationItem:
                name: "Mais"
                text: "Mais"
                icon: "menu"

        MDFloatingActionButton:
            md_bg_color: 8/255, 137/255, 90/255, 1
            id: box
            icon: "plus"
            type: "standard" # "standard", "large" or "small" # Tamanho do botão
            pos_hint: {"center_x": .86, "center_y": .2}
            on_press: app.root.current = 'register_screen'

<RegisterScreen>:
    name: 'register_screen'
    MDBoxLayout:
        orientation: 'vertical'

        MDTabs:
            id: tabs
            on_tab_switch: app.on_tab_switch(*args)

            Tab:
                title: "Animal"
                MDLabel:
                    titl: "Animal"
                    halign: "center"