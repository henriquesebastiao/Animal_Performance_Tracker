#:kivy 2.1.0

ScreenManager:
    SplashScreen:
    DashboardScreen:

# Tela de Splash
<SplashScreen>:
    name: 'splash_screen'
    MDFloatLayout:
        md_bg_color: 8/255, 137/255, 90/255, 1
        Image:
            source: 'images/logo.png'
            size_hint: .50, .50
            size: 300, 300
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            canvas.before:
                Color:
                    rgba: 8/255, 137/255, 90/255, 1
        
        # Botão de avançar
        MDIconButton:
            icon: 'chevron-right'
            user_font_size: '35sp'
            pos_hint: {'center_x': .5, 'center_y': .12}
            on_press: app.root.current = 'dashboard_screen'
            
        MDLabel:
            text: 'Animal Performance'
            pos_hint: {'center_x': .5, 'center_y': 0.30}
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: 0, 0, 0
            font_size: '20sp'
            font_name: 'fonts/Poppins-SemiBold.ttf'

        MDLabel:
            text: 'Tracker'
            pos_hint: {'center_x': .5, 'center_y': 0.265}
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: 0, 0, 0
            font_size: '20sp'
            font_name: 'fonts/Poppins-SemiBold.ttf'

# Tela de Dashboard 
<DashboardScreen>:
    name: 'dashboard_screen'
    MDFloatLayout:
        md_bg_color: 8/255, 137/255, 90/255, 1
        MDLabel:
            text: 'Dashboard'
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
            font_style: 'H4'
            theme_text_color: 'Custom'
            text_color: 0, 0, 0, 1

        MDRaisedButton:
            text: 'Logout'
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            on_release: app.logout()